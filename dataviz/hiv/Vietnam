<div id="buttons">
    <button id="Prevalence" class="btn btn-primary">Prevalence</button>
    <button id="Incidence"  class="btn btn-success">Incidence</button>
    <button id="NewInfections" class="btn btn-warning">New Infections</button>
    <button id="Deaths" class="btn btn-danger">Deaths</button>
